<article>
    {{#each posts as |post|}}
    <a href="/post/{{post.id}}">
    <div class="card">
        <h2 class="card-header">{{post.title}}</h2>
        <p class="card-body"> {{post.createdAt}} </p>
        {{#if post.user.username}}
        <p class="card-body">Created by: {{post.user.username}} </p>
        {{/if}}
    </div>
    </a>
    {{/each}}
</article>